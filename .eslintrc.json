{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true,
        "mocha": true,
        "jest": true
    },
    "extends": [
        "airbnb",
        "airbnb/hooks"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "import"
    ],
    "rules": {
        "react/prop-types": "off",
        "no-unused-vars": "off",
        "no-undef": "error",
        "react/jsx-props-no-spreading": "off",
        "react/jsx-filename-extension": "off",
        "import/prefer-default-export": "off"
    },
    "settings": {
        "import/resolver": "webpack"
    }
}
